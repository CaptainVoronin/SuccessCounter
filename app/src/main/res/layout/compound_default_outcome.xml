<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/lbStepName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:clickable="true"
        android:text="Miss. Poins"
        android:layout_marginLeft="6pt"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edStepDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:text="Step name"
        android:layout_marginLeft="6pt"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lbStepPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:clickable="true"
        android:text="0"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edStepPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:inputType="number"
        android:text="2"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:textSize="18sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnSaveOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/ic_save_black_24dp"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnRemoveOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        app:srcCompat="@drawable/ic_delete_black_24dp" />
</TableRow>
