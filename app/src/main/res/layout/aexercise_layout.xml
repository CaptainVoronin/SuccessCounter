<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".SimpleExerciseActivity">

    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="3pt"
                android:layout_weight="0.1"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/left_arrow" />

            <TextView
                android:id="@+id/tvExName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_weight="0.8"
                android:gravity="center_horizontal|center_vertical"
                android:text="Exercise name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue_worm15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/empty_placeholder" />
        </LinearLayout>

        <TextView
            android:id="@+id/lbPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/dark_blue"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:text="— —"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="28pt"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lbAttempts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/dark_blue"
            android:gravity="clip_horizontal|center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <LinearLayout
            android:id="@+id/viewChartPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginTop="20pt"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnRollback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/dark_blue"
                app:srcCompat="@drawable/ic_undo_48dp" />

            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:background="@color/dark_blue"
                app:srcCompat="@drawable/ic_note_add_gray_18dp" />

            <ImageView
                android:id="@+id/btnExerciseTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/ic_label_outline_gray_36dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>